# GAPS
## GAPS
gaps inner 7
gaps outer 7

# LAUNCH PROGRAMS ON STARTUP
## EXTEND SCREEN
exec --no-startup-id ~/.local/bin/extend-screen.sh

## REDSHIFT
exec --no-startup-id redshift-gtk

## QBITTORRENT
exec --no-startup-id qbittorrent

## MULLVAD
exec --no-startup-id mullvad-vpn

## MAP CAPS LOCK TO RETURN
exec --no-startup-id setxkbmap -option caps:none
exec --no-startup-id xmodmap -e "keycode 66 = Return"

# UTILITIES
## BRIGHTNESS (taken by Reddit user [deleted])
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

##  Screenshots in files
bindsym Print exec --no-startup-id maim --format=png "/home/$USER/Pictures/screenshot-$(date -u +'%Y%m%d-%H%M%SZ')-all.png"
bindsym $mod+Print exec --no-startup-id maim --format=png --window $(xdotool getactivewindow) "/home/$USER/Pictures/screenshot-$(date -u +'%Y%m%d-%H%M%SZ')-current.png"
bindsym Shift+Print exec --no-startup-id maim --format=png --select "/home/$USER/Pictures/screenshot-$(date -u +'%Y%m%d-%H%M%SZ')-selected.png"

## Screenshots in clipboards
bindsym Ctrl+Print exec --no-startup-id maim --format=png | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print exec --no-startup-id maim --format=png --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --format=png --select | xclip -selection clipboard -t image/png

## ARROW
bindsym Alt+h exec xdotool key Left
bindsym Alt+j exec xdotool key Down
bindsym Alt+k exec xdotool key Up
bindsym Alt+l exec xdotool key Right

## AUDACIOUS
bindsym XF86AudioPause exec audacious --play-pause
bindsym XF86AudioPlay exec audacious --play-pause
bindsym XF86AudioNext exec audacious --fwd
bindsym XF86AudioPrev exec audacious --rew

## EXTRACT TEXT FROM SELECTION
bindsym $mod+t exec --no-startup-id maim --format=png --select "/home/$USER/.i3/.selection.png" && tesseract /home/$USER/.i3/.selection.png /home/$USER/.i3/.selection && xclip -sel c < /home/$USER/.i3/.selection.txt && rm /home/$USER/.i3/.selection*

