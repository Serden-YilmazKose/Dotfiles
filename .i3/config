## CHANGE KEYBOARD LAYOUT
bindsym $mod+Ctrl+space exec --no-startup-id ~/.local/bin/change_keyboard.sh

## EMOJI
bindsym $mod+o exec --no-startup-id ~/.local/bin/emoji.sh

# Send all firefox windows to workspace 8
bindsym $mod+Ctrl+f exec --no-startup-id i3-msg '[class="firefox"] move to workspace 8'

