# DOTFILES CONFIG ALIAS
# COLOR
alias grep='/bin/grep --color=auto'
alias ls='/bin/ls --color=auto'
alias pacman='/bin/pacman --color=auto'
alias tree='/bin/tree -C'
alias yay='/bin/yay --color=auto'

# INTERACTIVE FILE MANIPULATION
alias cp='/bin/cp -i'
alias mv='/bin/mv -i'
alias rm='/bin/rm -i'

# GIT
alias gd='/bin/git diff'
alias ggp='/bin/git pull --ff-only'
alias ggpush='/bin/git push origin main'
alias gs='/bin/git status'

# CD
alias ..='cd ..'
alias ...='cd ../../'

# LS
alias la='ls -lAh'
alias ll='ls -lh'

# REST
alias sudo='sudo '
alias up='sudo pacman -Syu && yay -Syu ; pkill -RTMIN+3 i3blocks'
alias dot='cd $HOME/Documents/repos/Dotfiles'
alias news='newsboat && pkill -RTMIN+4 i3blocks ; xdotool type "clear" ; xdotool key Enter'
alias c='clear'
alias dvo='setxkbmap us dvorak'
alias aoeui='setxkbmap us'
alias caps='setxkbmap -option caps:none && xmodmap -e "keycode 66 = Return"'
alias plover='PYTHONWARNINGS="ignore" plover'
