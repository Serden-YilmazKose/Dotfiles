# DOTFILES CONFIG ALIAS
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias ggp='git pull --ff-only'
alias ll='ls -lh'
alias la='ls -lAh'
alias gs='git status'
alias up='sudo pacman -Syu && yay -Syu ; pkill -RTMIN+3 i3blocks'
alias ..='cd ..'
alias grep='grep --color=auto'
alias news='newsboat && pkill -RTMIN+4 i3blocks ; xdotool type "clear" ; xdotool key Enter'
alias plover='PYTHONWARNINGS="ignore" plover'
alias dvo='setxkbmap us dvorak'
alias aoeui='setxkbmap us'
alias caps='setxkbmap -option caps:none && xmodmap -e "keycode 66 = Return"'
alias c='clear'
alias dot='cd $HOME/Documents/repos/Dotfiles'
