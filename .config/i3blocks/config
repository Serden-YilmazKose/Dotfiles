# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
# ~/.config/i3blocks/config

separator_block_width=15
markup=none

[battery]
command=acpi | awk -F', ' '{print $2 "  " $3}' | sed 's/ remaining//'
interval=60

[load]
command=uptime | awk -F'load average: ' '{print $2}'
interval=15

[mullvad]
label=ðŸ¦«
command=~/.local/bin/mullvad.sh
interval=once
signal=2

[packages]
label=ðŸ“¦
command=~/.local/bin/update.sh
interval=once
signal=3

[newsboat]
label=ðŸ“°
command=~/.local/bin/unread_news.sh
interval=once
signal=4

[tztime-local]
label=ðŸ‡ºðŸ‡¸
command=TZ=America/Chicago date "+%H:%M"
interval=1

[tztime-home]
label=ðŸ‡«ðŸ‡®
command=TZ=Europe/Helsinki date "+%m/%d %H:%M:%S"
interval=1

[prayer]
command=~/.config/i3blocks/scripts/prayer_times.sh
interval=60

[volume]
command=~/.config/i3blocks/scripts/volume.sh
interval=once
signal=6
